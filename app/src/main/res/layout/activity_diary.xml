<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ListView
        android:id="@+id/diary_listview"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:dividerHeight="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:background="#ffffff"
        android:layout_alignRight="@+id/buttonmenu"
        android:layout_above="@+id/buttonmenu"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
<LinearLayout
    android:id="@+id/buttonmenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" >

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/my_library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_library"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/review"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/diary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clicked_diary"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/user_setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_setting"
        android:layout_weight="1"/>
</LinearLayout>
</RelativeLayout>