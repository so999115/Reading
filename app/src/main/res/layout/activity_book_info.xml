<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/remain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은 시간"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"/>

    <TextView
        android:id="@+id/remain_time_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignTop="@+id/remain_time"
        android:layout_toRightOf="@+id/remain_time"
        android:layout_marginLeft="60dp"/>

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textSize="15dp"
        android:layout_below="@+id/remain_time"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="15dp"
        android:layout_alignTop="@+id/stop_button"
        android:layout_toRightOf="@+id/stop_button"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/book_info_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffae67"
        android:layout_below="@+id/stop_button"
        android:layout_marginTop="15dp"/> <!--listview로 해야할지 textview로 해야할지 고민해봐야 할 것 같아요! -->

    <TextView
        android:id="@+id/memo_page_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 읽은 쪽수를 기록해주세요."
        android:textSize="20dp"
        android:layout_below="@+id/book_info_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/memo_page_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="숫자만 입력해 주세요."
        android:textSize="15dp"
        android:layout_below="@+id/memo_page_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/save_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쪽수 저장"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/memo_page_edittext"/>
    <Button
        android:id="@+id/go_to_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다 읽었어요"
        android:textSize="15dp"
        android:layout_below="@+id/save_progress"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/go_to_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독서 다이어리 쓰러가기"
        android:textSize="15dp"
        android:layout_below="@+id/go_to_review"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/buttonmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clicked_home"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/my_library_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_library"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/review_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/review"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/diary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/diary"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/user_setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_setting"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>